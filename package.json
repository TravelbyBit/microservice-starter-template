    "babel-jest": "^26.6.3",
    "chai": "^4.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "nock": "^13.0.7",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
