    "axios": "^0.21.1",
    "config": "^3.3.3",
    "core-js": "3",
    "fastify": "^3.12.0",
    "fastify-auth": "^1.0.1",
    "fastify-autoload": "^3.5.0",
    "fastify-cors": "^5.2.0",
    "fastify-healthcheck": "^3.1.0",
    "fastify-helmet": "^5.2.0",
    "fastify-rate-limit": "^5.2.0",
    "fastify-swagger": "^4.3.1",
    "fastify-x-request-id": "^1.2.0",
    "graphql-scalars": "^1.7.1",
    "graphql-tag": "^2.11.0",
